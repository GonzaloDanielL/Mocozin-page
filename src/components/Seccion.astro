---
interface Props {
    titulo: string;
    descripcion: string;
    orden: string;
    imagenes: string[][];
}

const { titulo, descripcion, orden, imagenes } = Astro.props;
---

<section class="max-w-4xl flex flex-col gap-5 max-lg:max-w-full max-sm:gap-2">
    <h3
        class="font-agbalumo text-5xl color-verde-m text-shadow-(--my-text-shadow) max-sm:text-3xl"
    >
        {titulo}
    </h3>
    <p class="font-playpen text-xl font-medium mt-2 max-sm:text-lg">{descripcion}</p>
    <div
        class="gap-5 max-lg:gap-2 max-sm:gap-1"
        style={`display: grid; grid-template-columns: var(${orden});`}
    >
        {
            imagenes.map((imagen) => (
                <img class="p-2.5 shadow-md" src={imagen[0]} alt={imagen[0]} />
            ))
        }
    </div>
</section>
